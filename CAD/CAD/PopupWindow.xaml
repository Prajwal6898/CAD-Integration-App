<Window x:Class="CAD.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="CAD Panel" Height="750" Width="320"
        WindowStartupLocation="Manual"
        Left="1380" Top="80"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        Topmost="True">
    
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A6268"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#495057"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#007ACC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#004578"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Success Button Style -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#218838"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Danger Button Style -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#BD2130"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#CCCCCC" Direction="270" ShadowDepth="2" Opacity="0.3" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <!-- Main Background Card -->
    <Border Background="#F5F5F5" 
            CornerRadius="6" 
            Margin="5">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                              Direction="270" 
                              ShadowDepth="2" 
                              BlurRadius="8" 
                              Opacity="0.2"/>
        </Border.Effect>
        
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Border Grid.Row="0" Background="#007ACC" CornerRadius="6,6,0,0" Padding="15">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="CAD Integration" 
                              FontSize="16" 
                              FontWeight="Bold" 
                              Foreground="White" 
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="AutoCAD/ZWCAD" 
                              FontSize="11" 
                              Foreground="#BDC3C7" 
                              HorizontalAlignment="Center" 
                              Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Main Content -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                
                <!-- Connection Status -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Connection Status" 
                                   FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,10"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse x:Name="ConnectionStatusIndicator" Width="10" Height="10" 
                                     Fill="#E74C3C" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock x:Name="ConnectionStatusText" Text="Not Connected" 
                                       FontSize="12" Foreground="#7F8C8D" VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Actions" 
                                   FontSize="14" FontWeight="SemiBold" 
                                   Foreground="#2C3E50" Margin="0,0,0,10"/>
                        
                        <Button x:Name="ConnectButton" 
                                Content="Connect" Click="ConnectButton_Click"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Margin="0,0,0,5"/>

                        <Button x:Name="DrawLineButton" 
                                Content="Draw Line" Click="DrawLineButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}" 
                                IsEnabled="False" Margin="0,0,0,5"/>

                        <Button x:Name="GetInfoButton" 
                                Content="Get Info" Click="GetInfoButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}" 
                                IsEnabled="False" Margin="0,0,0,5"/>

                        <Button x:Name="ZoomExtentsButton" 
                                Content="Zoom Extents" Click="ZoomExtentsButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}" 
                                IsEnabled="False" Margin="0,0,0,5"/>

                        <Button x:Name="SendCommandButton" 
                                Content="Send Command" Click="SendCommandButton_Click"
                                Style="{StaticResource SecondaryButtonStyle}" 
                                IsEnabled="False" Margin="0,0,0,5"/>

                        <Button x:Name="DisconnectButton" 
                                Content="Disconnect" Click="DisconnectButton_Click"
                                Style="{StaticResource DangerButtonStyle}" 
                                IsEnabled="False" Margin="0,0,0,0"/>
                    </StackPanel>
                </Border>
                
                </StackPanel>
            </ScrollViewer>
            
            <!-- Footer with Action Buttons -->
            <Border Grid.Row="2" Background="White" BorderBrush="#E9ECEF" BorderThickness="0,1,0,0" Padding="10">
                <Button Content="Close" Style="{StaticResource DangerButtonStyle}" Click="Close_Click" HorizontalAlignment="Stretch"/>
            </Border>
            
        </Grid>
    </Border>
</Window>